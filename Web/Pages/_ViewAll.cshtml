@using Core.Entities
@model IEnumerable<Personne>
<table class="table table-bordered" id="personneTable">
    <thead>
        <tr>
            <th>
                Nom
            </th>
            <th>
                Prénom
            </th>
            <th>
                Date de naissance
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            @foreach (var personne in Model)
            {
        <tr>
            <td>
                @personne.Nom
            </td>
            <td>
                @personne.Prenom
            </td>
            <td>
                @personne.DateDeNaissance
            </td>
            <td text-right">
                        <a onclick="jQueryModalGet('?handler=CreateOrEdit&id=@personne.Id','Modifier Personne')" class="btn btn-info text-white"> Edit</a>
                <form method="post" asp-page="Index" asp-route-id="@personne.Id" asp-page-handler="Delete" onsubmit="return jQueryModalDelete(this)" class="d-inline">
                    <button type="submit" class="btn btn-danger text-white"> Delete</button>
                </form>
            </td>
        </tr>
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#personneTable").DataTable();
    });
</script>